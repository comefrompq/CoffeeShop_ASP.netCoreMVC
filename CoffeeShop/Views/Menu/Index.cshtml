@model CoffeeShop.Models.MenuViewModels.MenuViewModel
@{
    ViewData["Title"] = "Index";
}

<section class="ftco-menu p-0">
    <div class="container">
        <div class="row d-md-flex">
            <div class="col-lg-12 ftco-animate p-md-5">
                <div class="row">
                    <div class="col-md-12 nav-link-wrap mb-5">
                        <div class="nav ftco-animate nav-pills justify-content-center" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                            @foreach (var category in Model.categories)
                            {
                                @if (category.Id == Model.products.FirstOrDefault().CategoryId)
                                {
                                    <a class="nav-link active" asp-action="ProductList" asp-controller="Menu" asp-route-id="@category.Id">@category.Name</a>
                                }
                                else
                                {
                                    <a class="nav-link" asp-action="ProductList" asp-controller="Menu" asp-route-id="@category.Id">@category.Name</a>
                                }

                            }

                        </div>
                    </div>
                    <div class="col-md-12 d-flex align-items-center">

                        <div class="tab-content ftco-animate" id="v-pills-tabContent">

                            <div class="tab-pane fade show active" id="v-pills-0" role="tabpanel" aria-labelledby="v-pills-0-tab">
                                <div class="row">
                                    @foreach (var product in Model.products)
                                    {
                                        <div class="col-md-3">
                                            <div class="menu-entry">
                                                <a class="img" style="background-image: url(@product.ImgPath);" asp-action="ProductDetails" asp-controller="Menu" asp-route-id="@product.Id"></a>
                                                <div class="text text-center pt-4">
                                                    <h3><a href="product-single.html">@product.Name</a></h3>
                                                    <p style="color:gray">@product.Description</p>
                                                    <p class="price"><span>$@product.Price</span></p>
                                                    @if (User.IsInRole("admin"))
                                                    {
                                                        <div class="row">
                                                            <p><a href="" class="btn btn-primary btn-outline-primary m-1">Edit</a></p>
                                                            <p><a href="" class="btn btn-primary btn-outline-primary m-1">Delete</a></p>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <p><a href="cart.html" class="btn btn-primary btn-outline-primary">Add to Cart</a></p>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }

                                </div>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
